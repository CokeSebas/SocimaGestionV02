<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="HOLA"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/SubCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOLA"
            android:textSize="25dp" />


    </LinearLayout>

    <it.gmariotti.cardslib.library.extra.staggeredgrid.view.CardGridStaggeredView xmlns:card="http://schemas.android.com/apk/res-auto"
        android:id="@+id/carddemo_extras_grid_stag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        card:column_count_landscape="3"
        card:grid_paddingLeft="8dp"
        card:grid_paddingRight="8dp"
        card:item_margin="8dp"
        card:list_card_layout_resourceID="@layout/card_producto" />

</LinearLayout>