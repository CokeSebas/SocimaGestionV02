<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FondoGris"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"

    android:paddingTop="50dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ImgNoticias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-45dp"
                    android:src="@drawable/noticias" />

                <TextView
                    android:id="@+id/badg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/badg"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="10"
                    android:textColor="#FFF"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:visibility="invisible" />


            </LinearLayout>

            <TextView
                android:id="@+id/TxNoticia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="NOTICIAS"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TxVendedor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="#FFF"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TxMeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="META: $"
                    android:textColor="#FFF"
                    android:textSize="40dp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Meta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300000"
                    android:textColor="#FFF"

                    android:textSize="40dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TxActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACTUAL: $"
                    android:textColor="#FFF"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Actual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300000"
                    android:textColor="#FFF"
                    android:textSize="40dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImgCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/cliente" />

            <TextView
                android:id="@+id/TxListaCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="LISTA CLIENTES"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"

            android:background="#ff2d2d2d"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="#ff5d9732"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="ORDEN DE COMPRA"
                    android:textColor="#FFF"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="CLIENTE"
                    android:textColor="#FFF"
                    android:background="#ff4b7a29"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="DIRECCION FACTURACION"
                    android:textColor="#FFF"
                    android:textSize="15dp" />


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TIPO PAGO"
                    android:textColor="#FFF"
                    android:background="#ff4b7a29"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TOTAL"
                    android:textColor="#FFF"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="ESTADO"
                    android:background="#ff4b7a29"
                    android:textColor="#FFF"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="FECHA REG"
                    android:textColor="#FFF"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ff4b7a29"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="OPCIONES"
                    android:textColor="#FFF"
                    android:textSize="15dp" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerviewCuatro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff082308"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>