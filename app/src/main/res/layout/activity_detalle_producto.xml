<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">


        <LinearLayout
            android:id="@+id/mainViewDos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/FondoGris"
            android:orientation="horizontal"
            android:weightSum="10">


            <LinearLayout
                android:id="@+id/CatalagoPrincipal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="-90dp"
                android:layout_weight="9.4"
                android:orientation="vertical">

                <!-- Banner Principal -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#ff82be59"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/NombreProducto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:text="Nombre Producto"
                        android:textColor="#FFF"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/CodProducto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="50dp"
                        android:text="#Codigo Producto"
                        android:textColor="#FFF"
                        android:textSize="18dp"
                        android:textStyle="bold" />



                </RelativeLayout>
                <!-- Banner Principal -->
                <!-- INFORMACION -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/LTC"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="#0F1"
                                android:gravity="center_horizontal|center_vertical"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/Esd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PRODUCTO CON ALGO"
                                    android:textSize="30dp"
                                    android:textStyle="bold"

                                    />

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="#FFF">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">


                                    <android.support.v4.view.ViewPager
                                        android:id="@+id/pager"
                                        android:layout_width="595dp"
                                        android:layout_height="595dp"
                                        android:layout_marginLeft="190dp"
                                        android:background="#FFF" />

                                    <LinearLayout
                                        android:layout_width="110dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="30dp"
                                        android:layout_toRightOf="@id/pager"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:id="@+id/Der"
                                            android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:layout_marginRight="-10dp"
                                            android:src="@drawable/derdos" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/Botonizq"
                                        android:layout_width="110dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="-100dp"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:id="@+id/Izq"
                                            android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:layout_marginLeft="8dp"
                                            android:src="@drawable/izqdos" />
                                    </LinearLayout>
                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"

                                    android:layout_height="100dp"
                                    android:layout_alignParentBottom="true">

                                    <android.support.v7.widget.RecyclerView
                                        android:id="@+id/recyclerview"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#ff82be59"
                                        >

                                    </android.support.v7.widget.RecyclerView>
                                </LinearLayout>
                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3">

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#ff31ab27">

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="400dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="330dp"
                                android:layout_height="475dp">

                                <TextView
                                    android:id="@+id/TituloDesc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:text="Descripcion "
                                    android:textColor="#FFF"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/DetalleDescripcion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/TituloDesc"
                                    android:layout_marginLeft="10dp"
                                    android:text="[ JAJSDJASKDJAKSDJAKSDJKASDKASDJAKSJDKASJDKASDJKASJDKA ]"
                                    android:textColor="#FFF"
                                    android:textSize="13dp" />

                                <TextView
                                    android:id="@+id/Empaque"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/DetalleDescripcion"
                                    android:layout_marginLeft="10dp"
                                    android:text="Pack"
                                    android:textColor="#FFF"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/NumeroEmpaque"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/DetalleDescripcion"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toRightOf="@id/Empaque"
                                    android:text="6   -"
                                    android:textColor="#FFF"
                                    android:textSize="13dp" />

                                <TextView
                                    android:id="@+id/Valu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/DetalleDescripcion"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toRightOf="@id/NumeroEmpaque"
                                    android:text="$123123 c/u Aprox"
                                    android:textColor="#FFF"
                                    android:textSize="13dp" />

                                <TextView
                                    android:id="@+id/CantidadRecomendada"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/NumeroEmpaque"
                                    android:layout_marginLeft="10dp"
                                    android:text="Empaque"
                                    android:textColor="#FFF"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/NumeroRecomendado"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/NumeroEmpaque"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toRightOf="@id/CantidadRecomendada"
                                    android:text="15"
                                    android:textColor="#FFF"
                                    android:textSize="13dp" />

                                <TextView
                                    android:id="@+id/Material"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/CantidadRecomendada"
                                    android:layout_marginLeft="10dp"
                                    android:text="Material :"
                                    android:textColor="#FFF"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/TipoMaterial"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/CantidadRecomendada"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toRightOf="@id/Material"
                                    android:text="Fierro"
                                    android:textColor="#FFF"
                                    android:textSize="13dp" />

                                <TextView
                                    android:id="@+id/LineaD"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/Material"
                                    android:layout_marginLeft="10dp"
                                    android:text="Linea de Diseño :"
                                    android:textColor="#FFF"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/TipoLineaD"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/LineaD"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="Fierro Fundido"
                                    android:textColor="#FFF"
                                    android:textSize="13dp" />

                                <TextView
                                    android:id="@+id/color"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/TipoLineaD"
                                    android:layout_marginLeft="10dp"
                                    android:text="Color :"
                                    android:textColor="#FFF"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/TipoColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/TipoLineaD"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toRightOf="@id/color"
                                    android:text="Azul Electrico"
                                    android:textColor="#FFF"
                                    android:textSize="13dp" />

                                <TextView
                                    android:id="@+id/Funcion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/color"
                                    android:layout_marginLeft="10dp"
                                    android:text="Funcion :"
                                    android:textColor="#FFF"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/TipoFuncion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/Funcion"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="Masetero para plantas"
                                    android:textColor="#FFF"
                                    android:textSize="13dp" />

                                <TextView
                                    android:id="@+id/Adicional"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/TipoFuncion"
                                    android:layout_marginLeft="10dp"
                                    android:text="Adicional:"
                                    android:textColor="#FFF"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/TipoAdicional"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/Adicional"
                                    android:layout_marginBottom="13dp"
                                    android:layout_marginLeft="10dp"
                                    android:text="Informacion Extra del producto"
                                    android:textColor="#FFF"
                                    android:textSize="13dp" />


                                <ImageView
                                    android:layout_width="75dp"
                                    android:layout_height="100dp"
                                    android:id="@+id/marcaPro"
                                    android:layout_alignParentLeft="true"
                                    android:layout_above="@+id/btnPdfProducto"
                                    android:layout_alignRight="@+id/btnPdfProducto"
                                    android:layout_below="@+id/TipoAdicional" />

                                <Button
                                    style="?android:attr/buttonStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Enviar PDF por Email"
                                    android:id="@+id/btnPdfProducto"
                                    android:src="@drawable/iconpdf"
                                    android:background="@drawable/btnpressverdefuerte"
                                    android:textColor="#FFF"
                                    android:layout_marginBottom="50dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignRight="@+id/LineaD"
                                    android:layout_alignEnd="@+id/LineaD" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_alignParentBottom="true"
                                android:layout_width="wrap_content"
                                android:layout_height="250dp">

                                <LinearLayout
                                    android:layout_alignParentTop="true"
                                    android:layout_width="330dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/PrecioProducto"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="$128381092398"
                                        android:textColor="#FFF"
                                        android:textSize="40dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/Descuento"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="$2000 (Dscto)"
                                        android:textColor="#FFF"
                                        android:textSize="18dp"
                                        android:textStyle="bold"
                                        android:visibility="invisible" />

                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/Comprar"
                                    android:layout_width="340dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal">

                                    <Button
                                        android:id="@+id/BtnComprar"
                                        android:layout_width="318dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="18dp"
                                        android:background="@drawable/btnpressverde"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:text="COMPRAR"
                                        android:layout_marginBottom="10dp"
                                        android:textColor="#FFF"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="330dp"
                                    android:layout_above="@id/Comprar"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center_horizontal">

                                    <Button
                                        android:id="@+id/BtnMenos"
                                        android:layout_width="60dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/btnpressverde"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:text="-"
                                        android:textColor="#FFF"
                                        android:textSize="18dp" />

                                    <EditText
                                        android:id="@+id/CantidadCompra"
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:gravity="center_horizontal"
                                        android:inputType="number"
                                        android:text="1"
                                        android:textColor="#FFF"
                                        android:textSize="15sp" />

                                    <Button
                                        android:id="@+id/BtnMas"
                                        android:layout_width="60dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@drawable/btnpressverde"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:text="+"
                                        android:textColor="#FFF"
                                        android:textSize="18dp" />


                                </LinearLayout>


                            </RelativeLayout>

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <!-- INFORMACION -->


            </LinearLayout>
            <!-- Boton Compra -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="28dp">


                <ImageButton
                    android:id="@+id/Carro"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bordescarrocompra"
                    android:src="@drawable/carrito" />
            </LinearLayout>
            <!-- Boton Compra -->

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="match_parent"
        android:layout_gravity="end">



        <fragment
            android:id="@+id/FrgListado"
            class="com.odril.Socima_Gestion.FragmentoCarroCompra"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>