<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff31ab27"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#ffa5a80f" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/FondoGris"

        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TituloCarro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carro de compra"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NombreClienteFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre cliente"
            android:textColor="#FFF"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff82be59">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerviewDos"
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:scrollbars="vertical"
            android:layout_marginLeft="10dp"
            android:background="#ff82be59"
            android:paddingTop="2dp">

        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignParentBottom="true"
            android:background="@color/FondoGris"
            android:gravity="center_horizontal"

            >
            <TextView
                android:id="@+id/TotalActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:text="Total Compra: "/>
            <TextView
                android:id="@+id/CreditoDisponible"
                android:layout_width="wrap_content"
                android:layout_below="@id/TotalActual"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:text="Credito Disponible: "/>

            <Button
                android:id="@+id/BtnTerminarVenta"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btnpressverde"
                android:text="Terminar venta" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
</LinearLayout>