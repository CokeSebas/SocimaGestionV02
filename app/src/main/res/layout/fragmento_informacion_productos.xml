<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FondoGris"
    android:orientation="horizontal"
    android:paddingTop="50dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TxTituloProductoNuevo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:text="PRODUCTOS NUEVOS"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="2.5dp"
                android:layout_marginBottom="10dp"
                android:background="#ff23901c"
                android:orientation="vertical" />
        </LinearLayout>

        <ListView
            android:id="@+id/LsProductoNuevo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:divider="#0000"
            android:dividerHeight="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TxTituloProductoSinStock"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:text="PRODUCTOS SIN STOCK"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="2.5dp"
                android:layout_marginBottom="10dp"
                android:background="#ff23901c"
                android:orientation="vertical" />
        </LinearLayout>

        <ListView
            android:id="@+id/LsSinStock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:divider="#0000"
            android:dividerHeight="20dp"/>


    </LinearLayout>

</LinearLayout>