<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- default -->
    <item android:state_focused="false" android:state_pressed="false">
        <shape>
            <solid android:color="#ff0f440f" />
            <stroke android:width="1dp" android:color="#ff0f440f" />
            <corners
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="25dp" />

        </shape>
    </item>

    <!-- button focused -->
    <item android:state_focused="true" android:state_pressed="false">
        <shape>
            <solid android:color="#ff196b19" />
            <stroke android:width="1dp" android:color="#ff196b19" />
            <corners
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="25dp" />

        </shape>
    </item>

    <!-- button pressed -->
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <solid android:color="#ff0d370d" />
            <stroke android:width="1dp" android:color="#ff0d370d" />
            <corners
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="25dp" />

        </shape>
    </item>
</selector>